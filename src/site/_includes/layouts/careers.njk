    {{ content | section | safe }}
  </div>
  <div class="mb-8">
    {{ content | section('remainder') | safe }}
  </div>
  <div class="bg-gray-800 overflow-hidden">
    <div class="flex flex-col lg:items-center lg:justify-between lg:flex-row px-4 py-5 sm:p-6">
