---
layout: default
pageClass: page blogpost
---
{# This is the single blog post page #}
<div>
  <h1 class="heading">{{ title }}</h1>
  <div class="post-metadata my-6">
    <div class="author uppercase">
      {% set comma = joiner() %}
      {%- for author in authors %}
        {{ comma() }} {{ team[author].name }}
      {%- endfor %}
    </div>
    <time value="{{ item.date }}" class="text-gray-400">{{ date | readableDate }}</time>
  </div>
  <div class="mb-4">
    {{ content | section | safe }}
  </div>
  <div>
    {{ content | section('remainder') | safe }}
  </div>
  {# {% include "components/blog-discuss.njk" %} #}
  {% include "components/social-share.njk" %}
  <div class="mt-12 pt-2 text-gray-400 text-sm border-t border-gray-300">
    <p>
      You can read more from Oxide Computer Company on our <a href="/blog">blog</a>.
    </p>
  </div>
</div>

